<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5A0BB"
    tools:context=".FirstCalendarTab">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:theme="@style/MyDatePickerStyle"

            />

        <Button
            android:id="@+id/buttonTask"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@id/datePicker"
            android:layout_centerHorizontal="true"
            android:background="@color/pink"
            android:text="View Task"
            android:textColor="@color/rose_gold" />

    </RelativeLayout>


    <include
        android:id="@+id/customViewBottom"
        layout="@layout/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>